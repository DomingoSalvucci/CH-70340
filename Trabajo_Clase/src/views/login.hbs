<div class="m-3 bg-light rounded-4 p-3">
  <h1>Iniciar Sesion</h1>
  <form action="/api/session/login" method="POST">

    <div class="form-group">
      <label for="email">Email address</label>
      <input type="email" name="email" id="email" class="form-control" required = "true"/>
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password" id="password" class="form-control" required = "true"/>
    </div>
<br>
    <button type="submit" class="btn btn-primary  btn-lg">Iniciar Sesion</button>
  </form>

  <div class="mt-3">
    <a href="/" class="btn btn-primary  btn-lg">
      <i class="bi bi-house-door-fill"></i>
      Home
    </a>
    <a href="/register" class="btn btn-primary  btn-lg">
              <i class="bi bi-pencil-square"></i>
        Registrese
    </a>

    <a href="/api/session/github" class="btn btn-success  btn-lg">
      <i class="bi bi-github"></i>
      Entrar con Github
    </a>

  </div>

</div>


